<launch>
    <arg name="gui" default="true" />
    <arg name="rvizconfig" default="$(find description)/config/arena.rviz" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find description)/urdf/robot.urdf" />
    <param name="use_gui" value="$(arg gui)"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
    <node name="backhoe_bucket_mapping" pkg="description" type="backhoe_bucket_mapping"/>
</launch>
