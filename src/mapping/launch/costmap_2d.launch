<launch>
  <rosparam file="$(find mapping)/yaml/minimal.yaml" command="load" ns="/costmap_2d_node/costmap"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(find imperio)/data/costmap.yaml"/>
  <node name="static_tf0" pkg="tf" type="static_transform_publisher" args="2 2 0 0 0 0 /map /base_link 100"/>
  <node name="costmap_2d_node" pkg="mapping" type="costmap_2d_node"/>
  <node name="blc" pkg="tf" type="static_transform_publisher" args="0.5 0 0 0 0 0 /base_link /camera_link 100"/>
  <node name="ccd" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /camera_link /camera_depth_frame 100"/>
  <node name="cdof" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /camera_link /camera_depth_optical_frame 100"/>
  <node name="crf" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /camera_link /camera_rgb_frame 100"/>
  <node name="crof" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /camera_link /camera_rgb_optical_frame 100"/>
</launch>
