<launch>
  <include file="$(find realsense_ros_camera)/launch/demo_pointcloud_and_laser.launch"/>

  <node pkg="hector_mapping" type="hector_mapping" name="mapper">
    <param name="base_frame" value="base_link"/>
    <param name="map_frame" value="map"/>
    <param name="map_resolution" value=".005"/>
    <param name="map_update_distance_thresh"  value=".02"/>
    <param name="map_update_angle_thresh" value=".1"/>
    <param name="map_pub_period" value="1"/>
    <param name="laser_min_dist" value=".2"/>
    <param name="laser_max_dist" value="5"/>
    <param name="laser_z_min_value" value="-.15"/>
    <param name="pub_map_odom_transform" value="false"/>
  </node>

</launch>
